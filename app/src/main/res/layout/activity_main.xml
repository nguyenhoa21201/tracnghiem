<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:layout_editor_absoluteX="-36dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/Txt1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="ENGLISH"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BtnEnglishQuizText"

            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:text="ENGLISH QUIZ TEXT"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/BtnEnglishQuizimage"

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnEnglishQuizText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:text="ENGLISH QUIZ IMAGE"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/BtnGuessWord"

            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@+id/BtnEnglishQuizimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:text="GUESS WORD"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/BtnThoat"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@+id/BtnGuessWord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="ThoÃ¡t"
            android:textColor="@color/black"
            android:textSize="40dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>